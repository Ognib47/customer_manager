<% if customer.nil? %>
  <p>There are no customers</p>
<% else %>
  <div class='container'>
    <div class='inner'>
      <h3>
        <%= customer.full_name %>
      </h3>
      <% if customer.image.present? %>
        <%= image_tag customer.image, class: 'image' %>
      <% end %>
      <div>
        <% if customer.email.nil? %>
          <p>
            no email
          </p>
        <% else%>
          <p> <%= customer.email %> </p>
        <% end %>
        <p>
          <%= customer.phone_number %>
        </p>
      </div>
    </div>
  </div>
<% end %>

